{
  "compilerOptions": {
	  "target": "es5",
	  "module": "commonjs",
	  "moduleResolution": "Node",
	  "outDir": "dist",
	  "sourceMap": true,
	  "declaration": true,
	  "allowSyntheticDefaultImports": true,
	  "baseUrl": ".",
	  "paths": {
		  "*": [
			  "node_modules/"
		  ],
		  "typings/*": [
			  "src/typings/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
